<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <application
            android:name=".MainApplication"
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.NocnyPrud2"
            tools:targetApi="31">

        <!-- first run flow-->

        <activity
                android:name=".MainActivity"
                android:exported="true"
                android:label="@string/app_name"
                android:theme="@style/Theme.NocnyPrud2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".ui.activities.wizard.WelcomeActivity"
                android:label="@string/app_name"
                android:theme="@style/Theme.NocnyPrud2">
        </activity>

        <activity
                android:name=".ui.activities.wizard.CountrySelectActivity"
                android:label="@string/app_name"
                android:theme="@style/Theme.NocnyPrud2">
        </activity>

        <activity
                android:name=".ui.activities.wizard.ProviderSelectActivity"
                android:label="@string/app_name"
                android:theme="@style/Theme.NocnyPrud2">
        </activity>

        <activity
                android:name=".ui.activities.wizard.ServicePointSetupActivity"
                android:label="@string/app_name"
                android:theme="@style/Theme.NocnyPrud2">
        </activity>

        <activity
                android:name=".ui.activities.timetable.TimetableActivity"
                android:label="@string/app_name"
                android:theme="@style/Theme.NocnyPrud2">
        </activity>


    </application>

</manifest>
